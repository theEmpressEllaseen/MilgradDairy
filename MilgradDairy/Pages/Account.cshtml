@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model MilgradDairy.Pages.Account

@{
    ViewBag.Title = "Milgrad Dairy | account";
}

<div class="card-container">
    <div class="card-item product-card">
        <h1>create an account:</h1>
    </div>

    <div class="card-item white-card" id="form-card">
        <form method="post">
            <label asp-for="@Model.Customer.FirstName"></label>
            <input asp-for="@Model.Customer.FirstName">
            <span asp-validation-for="@Model.Customer.FirstName"></span>
            
            <label asp-for="@Model.Customer.LastName"></label>
            <input asp-for="@Model.Customer.LastName">
            <span asp-validation-for="@Model.Customer.LastName"></span>
            
            <label asp-for="@Model.Customer.Email"></label>
            <input asp-for="@Model.Customer.Email">
            <span asp-validation-for="@Model.Customer.Email"></span>
            
            <label asp-for="@Model.Customer.Password"></label>
            <input asp-for="@Model.Customer.Password">
            <span asp-validation-for="@Model.Customer.Password"></span>
            
            <label asp-for="@Model.Customer.ConfirmPassword"></label>
            <input asp-for="@Model.Customer.ConfirmPassword">
            <span asp-validation-for="@Model.Customer.ConfirmPassword"></span>
            
            <br><label>i have read the terms and conditions <a asp-page="Terms" target="_blank">here</a></label>
            <input asp-for="@Model.Customer.Accept">
            <span asp-validation-for="@Model.Customer.Accept"></span>
            <input type="submit" value="submit">
        </form>
    </div>

    <div class="card-item white-card">
        <video controls autoplay muted>
            <source src="~/video/love.mp4" type="video/mp4">
            Sorry, your browser does not support this video :(
        </video>
    </div>
</div>

<div class="all-products">
    <img src="~/images/all-products.png" alt="Our product range">
    <a asp-page="All" class="submit-button">see all products</a>
</div>
